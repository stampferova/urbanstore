.subscribe
	background-color $colorGray
	padding 20px 0

	&__title
		font-size 18px
		font-weight 600

	&__input
		height 50px
		min-width 400px
		padding 15px 23px

	&__button
		display inline-block
		text-decoration none
		height 50px
		padding 15px 50px
		background-color $colorPrimary
		color $colorWhite
		transition background-color $t

		&:hover {
			background-color $colorBlack
		}

	&__link
		color $colorWhite

	@media $MQ.lgDown
		&__input
			min-width 200px

		&__button
			padding 15px 20px


		text-align center

	@media $MQ.mdDown
		&__input
			min-width 100px


input[type="email"].subscribe__input::-webkit-input-placeholder
	color $colorBlack
	opacity 0.85
	font-size 13px
