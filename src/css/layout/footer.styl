.footer
	position relative
	&__list
		list-style unset
		padding-left 20px

	&__link
		color $colorPrimary

		&:hover
			text-decoration underline

	&::after
		position absolute
		content ""
		min-width 550px
		height 37px
		background-image url("../../img/illust/payment.png")
		background-position center
		background-size cover
		background-repeat no-repeat
		bottom 0
		left 37%

	@media $MQ.lgDown
		&::after
			display none
