.nav
	&__logo
		display inline-block
		margin 0
		padding 0

	&__top
		padding 5px 0
		font-size 12px

	&__link
		color $colorWhite
		font-weight 600

		&:hover
			color $colorPrimary

	&__main
		padding 20px 5px

	&__input
		width 180px
		height 25px
		padding 5px

	&__button
		height 25px
		width 80px
		background $colorPrimary
		display inline-block
		text-align center
		color $colorBlack
		font-weight 600
		padding 4px
		font-size 12px
		transition background-color $t

		&:hover {
			background-color $colorBlack
		}

	&__item
		color $colorWhite
		font-weight 600
		padding 10px 12px 3px
		display inline-block


		&.is-active
			border-bottom 2px solid $colorRed

	&__select
		position relative
		cursor pointer
		&::after
			position absolute
			content ""
			border solid $colorWhite
			border-width 0 1px 1px 0
			display inline-block
			padding 2px
			transform rotate(45deg)
			-webkit-transform rotate(45deg)
			top 44%
			left 92%

	&__select-menu
		background $colorBlack
		padding 5px
		border-radius 3px
		display none
		position absolute
		top 100%
		z-index 2

	&__select.is-active
		.nav__select-menu
			display inline-block

	&__icon
		display inline-block
		margin-right 5px

	&__button--menu,
	&__button--user,
	&__button--contact
		display none


	@media $MQ.lgDown
		&__item
			padding 8px 7px 3px

		&__select
			&::after
				top 40%
				left 96%

	@media $MQ.mdDown
		&__logo
			width 150px

		&__input
			width 120px

		&__basket
			display none

		&__button--menu,
		&__button--user
			display inline-block

		&__button--menu
			display block
			position relative
			width 28px
			height 28px
			background $colorWhite
			border-radius 50%

			&::before,
			&::after
				content ""
				position absolute
				width 16px
				height 3px
				background $colorPrimary
				box-shadow 0 -6px $colorPrimary, 0 6px $colorPrimary
				left 6px
				bottom 12px
				transition 0.3s transform, 0.3s box-shadow
			.is-menu-visible &
				&:before
					transform rotate(-45deg)
					box-shadow none
				&:after
					transform rotate(45deg)
					box-shadow none


		&__button--user
			display block
			width 28px
			height 28px
			background $colorWhite
			border-radius 50%
			padding 2px 4px

		&__select-menu
			z-index unset
			position static

		&__list
			flex-direction column
			position absolute
			background $colorBlack
			z-index 3
			width 100%
			transform translateX(-100%)
			transition transform 0.3s

		.is-menu-visible &__list
			transform translateX(0)

		&__select
			&::after
				top 16px
				right 0
				left auto
				transform rotate(-45deg)

		&__top
			position absolute
			background $colorBlack
			z-index 3
			width 100%
			padding 10px
			top 100%
			transform translateX(-100%)

			&.is-user-open
				transform translateX(0)

		&__item
			display block
	@media $MQ.smDown
		&__search-bar
			order 2

		&__logo
			margin-bottom 10px





input[type="text"].nav__input::-webkit-input-placeholder
	color $colorBlack
	opacity 0.7
	font-size 10px
	font-weight 600



